# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/notifications.db

# WhatsApp Configuration (Twilio or Meta Cloud API)
WHATSAPP_PROVIDER=twilio
WHATSAPP_ACCOUNT_SID=your_twilio_account_sid
WHATSAPP_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_FROM_NUMBER=whatsapp:+14155238886
# Meta Cloud API alternative
META_WHATSAPP_TOKEN=your_meta_access_token
META_WHATSAPP_PHONE_ID=your_phone_number_id

# Email Configuration (SMTP or SendGrid)
EMAIL_PROVIDER=smtp
# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=notifications@techaura.com
# SendGrid alternative
SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# Sample recipient for testing
SAMPLE_WHATSAPP_NUMBER=3008602789
